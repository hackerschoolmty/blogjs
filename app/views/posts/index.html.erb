<div id="layout" class="pure-g">
  <div class="sidebar pure-u-1 pure-u-md-1-4">
    <div class="header">
      <h1 class="brand-title">Hacker Blog</h1>
      <h2 class="brand-tagline">>HSMTY</h2>
    </div>
  </div>
  <div class="content pure-u-1 pure-u-md-3-4">
    <div>
      <div class="posts">
        <h1 class="content-subhead">Posts</h1>
        <% @posts.each do |post| %>
          <section class="post">
            <header class="post-header">
              <img class="post-avatar" alt="<%= post.author %>" height="48" width="48" src="<%= asset_url(post.avatar) %>">
              <h2 class="post-title"><%= post.title %></h2>
              <p class="post-meta">
                By <a href="#" class="post-author"><%= post.author %></a>
                <% post.categories.split(',').each do |category|%>
                  <a class="post-category post-category-<%= category.downcase %>" href="#">
                    <%= category %>
                  </a>
                <% end %> 
                <a href="#" data-edit-title>Edit title</a> |
                <a href="#" data-edit-author>Edit author</a> |
                <a href="#" data-destroy>Destroy</a> 
              </p>
            </header>
            <div class="post-description">
              <p data-editable>
                <%= post.content %>
              </p>
            </div>
          </section>
        <% end %>
        
      </div>
      <div class="footer">
        <div class="pure-menu pure-menu-horizontal">
          <ul>
            <li class="pure-menu-item">
              <a href="http://hackerschool.mx/" class="pure-menu-link">Hacker School</a>
            </li>
            <li class="pure-menu-item">
              <a href="https://twitter.com/hackerschoolmty" class="pure-menu-link">Twitter</a>
            </li>
            <li class="pure-menu-item">
              <a href="https://github.com/hackerschoolmty" class="pure-menu-link">GitHub</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>